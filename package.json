{
  "name": "wtf-cosmos-js-fixed",
  "version": "1.0.1",
  "description": "Fixed version of wtf-cosmos-js with CSP issues resolved - A blockchain implementation built with JavaScript for educational purposes, inspired by Cosmos SDK",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/.*\\.test\\.js$",
    "test:integration": "jest --testPathPattern=tests/.*\\.integration\\.js$",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint --config ./eslint.config.mjs src/* test/*",
    "lint:fix": "eslint src/ tests/ --c .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "build": "./scripts/build.sh",
    "setup": "./scripts/setup.sh",
    "docs": "jsdoc -c jsdoc.json",
    "precommit": "npm run lint && npm run test",
    "prepush": "npm run lint && npm run test:coverage",
    "clean": "rm -rf node_modules dist coverage logs/*.log"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Rexingleung/wtf-cosmos-js-fixed.git"
  },
  "keywords": [
    "blockchain",
    "cosmos",
    "javascript",
    "cryptocurrency",
    "proof-of-work",
    "consensus",
    "education",
    "wtf-academy",
    "sdk",
    "decentralized",
    "csp-fixed",
    "security"
  ],
  "author": "WTF Academy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rexingleung/wtf-cosmos-js-fixed/issues"
  },
  "homepage": "https://github.com/Rexingleung/wtf-cosmos-js-fixed#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@cosmjs/crypto": "^0.32.1",
    "@cosmjs/encoding": "^0.32.1",
    "@cosmjs/utils": "^0.32.1",
    "bech32": "^2.0.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "secp256k1": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/jest": "^29.5.5",
    "eslint": "^8.57.1",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:coverage"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 10000
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}